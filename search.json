---
layout: none
---
[
{% assign allDocs = "" | split: "" %}
{% for collection in site.collections %}
  {% assign allDocs = allDocs | concat: collection.docs %}
{% endfor %}
{% for doc in allDocs %}
  {
    "title": {{ doc.title | jsonify }},
    "url": "{{ site.baseurl }}{{ doc.url }}",
    "collection": "{{ doc.collection }}",
    "content": {{ doc.content | strip_html | strip_newlines | truncate: 500 | jsonify }}
  },
{% endfor %}
{% for character in site.data.characters %}
  {
    "title": {{ character.name | jsonify }},
    "url": "{{ site.baseurl }}{% assign campaigns = site.Campaigns | where: 'path', character.path %}{% if campaigns.size > 0 %}{{ campaigns[0].url }}{% else %}/#{% endif %}",
    "collection": "characters",
    "content": "Campaign character"
  }{% unless forloop.last %},{% endunless %}
{% endfor %}
]
